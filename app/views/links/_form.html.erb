<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Link<br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    Popis odkazu<br />
    <%= f.text_area :description %>
  </div>
    <%= f.hidden_field :song_id, :value => params[:song_id] %>
    <% if signed_in? %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <% end %>
  <div class="actions">
    <%= f.submit 'Pridaj link', :class => 'btn btn-primary' %>
  </div>
<% end %>
